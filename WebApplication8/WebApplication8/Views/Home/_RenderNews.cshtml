@using WebApplication8.Models
@model List<NewsDataViewModel>


@foreach (var news in Model)
{
    <div class="single-blog-post small-featured-post d-flex">

        <div class="post-data">
            <a href="#" class="post-catagory">@news.News_Detail.heading</a>
            <div class="post-meta">
                <a href="#" class="post-title">
                    <h6>@news.News_Detail.content.Substring(0, 25)</h6>
                </a>
                <span class="post-date"><a href="/Home/ShowNewsDetail/@news.News_Detail.news_id/">Read More</a> <a href="#"onclick="calculateNewByScore(@news.News_Detail.news_id)" id="lip">LIP</a> </span>
                <span class="post-date"><span>@news.News_Detail.date</span></span> |
                <span class="post-date"><span>@news.Author.name_authors</span></span> |
                <span class="post-date"><span>@news.Category.name_categories</span></span> |
                <span class="post-date"><span>@news.Source.website_name</span></span>

            </div>
        </div>
    </div>
}
